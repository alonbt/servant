{
  "manifest_version": 2,

  "name": "Servant - Server Mock",
  "description": "This extension will help you mock client requests to the server",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "background": {
    "scripts": ["backgroundPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["documentStartScripts.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "<all_urls>"
//    "webRequest",
//    "webRequestBlocking"
  ]
}